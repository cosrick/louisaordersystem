<div ng-controller="menuCtrl" class="modal-start">
    <div class="modal-header">
        <h3 class="modal-title">新增菜單品項</h3>
    </div>
    <div class="modal-body">
        <ul>
            <li ng-repeat="item in items">
                <a ng-click="selected.item = item">{{ item }}</a>
            </li>
        </ul>
        Selected: <b>{{ selected.item }}</b>

        <form class="form-horizontal" role="form"> 
        <!-- action="/api/menu/create" method="POST" -->
            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label">品項名稱</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" ng-model="inputName" placeholder="Productname" name="productName">
                </div>
            </div>            
            <div class="form-group">
                <label for="inputDescription"class="col-md-2 control-label">描述</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" ng-model="inputDescription" placeholder="description">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPrice" class="col-md-2 control-label">價格</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" ng-model="inputPrice" placeholder="price">
                </div>
            </div>
            <div class="form-group">
                <label for="inputCategory" class="col-md-2 control-label">種類</label>
                <div class="col-md-8">
                    <select class="form-control" ng-model="inputCategory">
                        <option>麵包</option>
                        <option>咖啡</option>
                        <option>Pizza</option>
                    </select>
                </div>
            </div>              
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button type="submit" class="btn btn-danger btn-sm" ng-click="addMenuItem();ok()">送出</button>&nbsp;
                    <button type="reset" class="btn btn-default btn-sm">重置</button>
                    <button class="btn btn-warning btn-sm" ng-click="cancel()">取消</button>
                </div>
            </div>
        </form>
    </div>
    <!-- <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()">確認</button>
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
    </div> -->

    
</div>